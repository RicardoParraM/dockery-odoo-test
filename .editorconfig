root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4
# Indentation override for all JS under lib directory
[**/lib/**.js]
indent_style = space
indent_size = 4
# Matches the exact files either package.json or .travis.yml
[*.yml]
indent_style = space
indent_size = 2

[Makefile]
indent_style = tab
